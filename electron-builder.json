{
  "appId": "com.esther-app.astrology",
  "productName": "Esther",
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "public/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "certificateFile": null,
    "signingHashAlgorithms": [
      "sha256"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Esther"
  },
  "portable": {
    "artifactName": "Esther-${version}-portable.exe"
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "category": "public.app-category.education",
    "artifactName": "Esther-${version}.${ext}"
  },
  "dmg": {
    "contents": [
      {
        "x": 110,
        "y": 150,
        "type": "file"
      },
      {
        "x": 240,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Education",
    "artifactName": "Esther-${version}.${ext}"
  },
  "appImage": {
    "artifactName": "Esther-${version}.AppImage"
  },
  "deb": {
    "depends": [
      "gconf2",
      "gconf-service",
      "libnotify4",
      "libappindicator1",
      "libxtst6"
    ]
  },
  "publish": {
    "provider": "github",
    "owner": "mehrunes77",
    "repo": "Esther",
    "releaseType": "release",
    "overwrite": true
  }
}
