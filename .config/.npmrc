# NPM Configuration for Esther
# Ensures reproducible builds and consistent dependency versions

# Use exact version matching for production
save-exact=true

# Prevent optional dependencies from causing issues
ignore-optional=false

# Use npm ci for CI/CD environments
legacy-peer-deps=false

# Registry
registry=https://registry.npmjs.org/

# Audit settings
audit=true
audit-level=moderate

# Production mode optimization
production=false
