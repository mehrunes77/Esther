# Esther Environment Configuration
# Copy this to .env.local and fill in your values
# NEVER commit .env.local to git!

# Node Environment
NODE_ENV=development

# Backend API Server
API_PORT=5000
API_HOST=localhost

# Frontend Dev Server
FRONTEND_PORT=3000

# Logging
LOG_LEVEL=info

# NASA API (Optional - most endpoints don't require keys)
NASA_API_KEY=DEMO_KEY

# Database (if using PostgreSQL instead of local file storage)
# DATABASE_URL=postgres://user:password@localhost:5432/esther

# Redis (optional for caching)
# REDIS_URL=redis://localhost:6379

# Security: CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Data Sources - Update Intervals (milliseconds)
PLANET_UPDATE_INTERVAL=900000
NEWS_UPDATE_INTERVAL=1800000
ASTEROID_UPDATE_INTERVAL=3600000

# News Filtering
NEWS_FILTERING_ENABLED=true
NEWS_MIN_RELEVANCE_SCORE=30

# Astronomy Data Sources (URLs - keep these!)
HORIZONS_API_BASE=https://ssd-api.jpl.nasa.gov/api
JPL_SBDB_BASE=https://ssd-api.jpl.nasa.gov/sbdb
NASA_FACTS_BASE=https://nssdc.gsfc.nasa.gov/planetary/fact_sheet

# RSS Feed Sources (comma-separated URLs)
RSS_SOURCES=https://www.nasa.gov/feed/,https://www.esa.int/esafeed/rss.xml,https://arxiv.org/rss/astro-ph

# Analytics (Optional - keep privacy-focused)
# SENTRY_DSN=

# Feature Flags
FEATURE_ADVANCED_FILTERING=false
FEATURE_CHARTS=false
